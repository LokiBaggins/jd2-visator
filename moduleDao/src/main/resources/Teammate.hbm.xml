<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="jd2.baggins.beans.Teammate" table="t_teammates">
        <meta attribute="class-description">
            This class contains the personal info of teammates.
        </meta>
        <id name="id" type="int" column="C_ID">
            <generator class="increment"/>
        </id>
        <property name="nickName" column="c_nick_name" type="string"/>
        <property name="firstNameCyr" column="c_f_name_cyr" type="string"/>
        <property name="midNameCyr" column="c_m_name_cyr" type="string"/>
        <property name="lastNameCyr" column="c_l_name_cyr" type="string"/>
        <property name="birthDate" column="c_birth_date" type="date"/>
        <property name="sex" column="c_sex" type="int"/>
        <property name="vkProfile" column="c_vk_profile" type="string"/>
        <property name="contactPhone" column="c_contact_phone" type="string"/>
        <property name="passportId" column="c_fk_passport_id" type="int"/>
        <property name="occupationId" column="c_fk_occupation_id" type="int"/>
        <property name="currentAddressId" column="c_fk_current_address_id" type="int"/>

    </class>
</hibernate-mapping>