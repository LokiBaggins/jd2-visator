<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="beans.Teammate" table="t_teammates">
        <meta attribute="class-description">
            This class contains the personal info of teammates.
        </meta>
        <id name="id" type="int" column="C_ID">
            <generator class="increment"/>
        </id>
        <property name="nickName" column="c_nick_name" type="string"/>
        <property name="birthDate" column="c_birth_date" type="string"/>
        <property name="salary" column="salary" type="int"/>
    </class>
</hibernate-mapping>